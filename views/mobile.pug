extends layout.pug

block head
  link(rel='stylesheet' href='/public/dist/mobile.min.css')
block body
  div(id='back')
    button(id='A') A
    button(id='B') B
    button(id='C') C
    button(id='D') D
    button(id='left') LEFT
    button(id='right') RIGHT
    button(id='up') UP
    button(id='down') DOWN
  div(id='front')
    h1 Enter code
    input(id='connect' type='text')


block scripts
  if devMode
    script(src='/public/js/mobile/InputHandler.js')
    script(src='/public/js/mobile/mobile.js')
  else
    script(src='/public/dist/mobile.min.js')
